<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="74dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="72dp">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:elevation="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/view2"
                app:cardCornerRadius="40dp"
                android:layout_marginLeft="16dp"
                android:layout_centerHorizontal="true"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9">
                <ImageView
                    android:layout_height="48dp"
                    android:layout_width="48dp"
                    android:id="@+id/helper_profile_picture"
                    android:src="@drawable/ic_call_white_24dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true">
                </ImageView>
            </android.support.v7.widget.CardView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.7"
            android:id="@+id/helper_type_and_name_layout"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="8dp"
                android:id="@+id/helper_full_name_text_view"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:paddingTop="20dp"
                android:text="Michael Example"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:paddingLeft="8dp"
                android:id="@+id/helper_type_text_view"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:text="First Responder"
                android:layout_height="wrap_content" />


        </LinearLayout>


        <ImageView
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_marginEnd="16dp"
            android:id="@+id/request_specific_helper_button"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:layout_height="match_parent"
            android:layout_marginRight="16dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="72dp"
        android:background="@color/WhiteSmoke"
        android:layout_height="2dp"/>


</LinearLayout>

